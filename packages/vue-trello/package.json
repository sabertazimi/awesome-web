{
  "name": "@awesome-web/vue-trello",
  "version": "2.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "vue-tsc --noEmit && vite build && pnpm build:post",
    "build:post": "mkdirp ../../dist/vue-trello && cp -fr ./dist/* ../../dist/vue-trello",
    "dev": "vite",
    "lint": "pnpm lint:style && pnpm lint:type-check",
    "lint:style": "eslint ./src && stylelint ./src/**/*.{css,vue}",
    "lint:type-check": "vue-tsc --noEmit",
    "lint:fix": "eslint --fix ./src && stylelint ./src/**/*.{css,vue} --fix",
    "serve": "vite preview"
  },
  "dependencies": {
    "nanoid": "^5.1.6",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@dg-scripts/eslint-config": "^5.21.8",
    "@dg-scripts/stylelint-config": "^5.21.8",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "stylelint": "^16.26.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vue-tsc": "^3.1.5"
  }
}
