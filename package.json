{
  "name": "awesome-web",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "description": "A brand new repository for web development prototypes",
  "author": "sabertazimi",
  "license": "MIT",
  "homepage": "https://github.com/sabertazimi/awesome-web",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/awesome-web.git"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/awesome-web/issues"
  },
  "keywords": [
    "html",
    "html5",
    "css",
    "css3",
    "js",
    "javascript",
    "ecmascript",
    "react",
    "reactjs",
    "vue",
    "vuejs",
    "node",
    "nodejs",
    "front-end",
    "front-end development",
    "web",
    "web development"
  ],
  "scripts": {
    "build": "pnpm -r run build && node scripts/post-build.js && cp -fr vercel.json dist/",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "release": "lerna version --force-publish --sign-git-commit --sign-git-tag",
    "dev": "pnpm dev:awesome-web",
    "dev:awesome-web": "pnpm --filter @awesome-web/awesome-web dev",
    "dev:m-league-reviewer": "pnpm --filter m-league-reviewer dev",
    "dev:mortal-ui": "pnpm --filter mortal-ui dev",
    "dev:echarts-dashboard": "pnpm --filter echarts-dashboard dev",
    "dev:react-renderer": "pnpm --filter @awesome-web/react-renderer dev",
    "dev:vue-design": "pnpm --filter @awesome-web/vue-design dev",
    "dev:vue-trello": "pnpm --filter @awesome-web/vue-trello dev",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "@dg-scripts/eslint-config": "^6.1.0",
    "@dg-scripts/stylelint-config": "^6.1.0",
    "@types/node": "^24.10.9",
    "eslint": "^9.39.2",
    "lerna": "^9.0.3",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^17.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
